<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:id="@+id/mainLayout"
	android:background="@drawable/background">
	<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical" android:layout_width="fill_parent" android:paddingTop="40dip"
		android:layout_height="fill_parent">
		<LinearLayout
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="vertical" android:background="@drawable/leather" android:layout_width="458px"
			android:paddingTop="20dip"
			android:layout_centerHorizontal="true"
			android:gravity="center_horizontal"
			android:layout_height="300px" android:id="@+id/textLayout">
			<TextView
				android:textSize="@dimen/location" android:id="@+id/location_text_line2"
				android:textColor="@color/gray" android:layout_width="fill_parent"
				android:gravity="center_horizontal"
				android:layout_height="fill_parent" android:lines="2"/>
		</LinearLayout>
		<LinearLayout
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="vertical" android:layout_width="458px" android:layout_centerInParent="true"
			android:layout_height="300px" android:id="@+id/noLocationLayout"  android:background="@drawable/leather">
			<TextView
				android:textSize="@dimen/about_text_size" android:textColor="@color/gray"
				android:gravity="center" android:id="@+id/noLocationText" android:padding="14dip"
				android:layout_height="fill_parent" android:layout_width="fill_parent" 
				android:lines="5" />
		</LinearLayout>
		<FrameLayout
			android:layout_marginTop="0px"
			android:orientation="vertical" android:id="@+id/qiblaFrameLayout"
			android:layout_below="@id/textLayout" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_centerInParent="true">
			<FrameLayout
				android:layout_marginTop="0px"  android:layout_gravity="center"
				android:orientation="vertical" android:id="@+id/qiblaLayout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" >
				<ImageView
					android:layout_width="337px"
					android:layout_height="337px" android:id="@+id/frameImage" android:layout_gravity="center"
					android:src="@drawable/frame" />
				<ImageView 
					android:layout_width="337px" android:layout_gravity="center"
					android:layout_height="337px" 
					android:id="@+id/compassImage" android:src="@drawable/rosetta" />
				<ImageView
					android:layout_width="337px" android:layout_gravity="center"
					android:layout_height="337px" 
					android:id="@+id/arrowImage" android:src="@drawable/arrow" />
			</FrameLayout>
		</FrameLayout>
	</RelativeLayout>
</LinearLayout>