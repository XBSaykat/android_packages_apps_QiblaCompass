<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:id="@+id/mainLayout">
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_height="fill_parent">

		<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="vertical" android:id="@+id/qiblaLayout"
			android:layout_width="fill_parent" android:layout_height="fill_parent">
			<TextView android:id="@+id/location_text" android:layout_height="wrap_content" android:layout_width="fill_parent" android:lines="3" />
			<ImageView android:layout_width="fill_parent"
				android:layout_height="fill_parent" android:scaleType="center"

				android:id="@+id/compassImage" android:src="@drawable/rosetta" />
			<ImageView android:layout_width="fill_parent"
				android:layout_height="fill_parent" android:id="@+id/frameImage"
				android:scaleType="center" android:src="@drawable/frame" />
			<ImageView android:layout_width="fill_parent"
				android:layout_height="fill_parent" android:scaleType="center"
				android:id="@+id/arrowImage" android:src="@drawable/arrow" />
		</FrameLayout>
	</LinearLayout>
</LinearLayout>
